<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WidgetTypesDemo">
        <!-- Information Widget -->
        <receiver
            android:name=".InfoWidget"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.widgettypesdemo.UPDATE_TIME" />
                <action android:name="com.example.widgettypesdemo.WIDGET_CLICK" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/infowidget_info" />
        </receiver>

        <!-- Control Widget -->
        <receiver
            android:name=".widgets.ControlWidget"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.widgettypesdemo.BUTTON_CLICK" />
                <action android:name="com.example.widgettypesdemo.TOGGLE_SWITCH" />
                <action android:name="com.example.widgettypesdemo.OPEN_APP" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/control_widget_info" />
        </receiver>

        <!-- Collection Widget -->
        <receiver
            android:name=".widgets.CollectionWidget"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.widgettypesdemo.ITEM_CLICK" />
                <action android:name="com.example.widgettypesdemo.REFRESH_COLLECTION" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/collection_widget_info" />
        </receiver>

        <!-- Hybrid Widget -->
        <receiver
            android:name=".widgets.HybridWidget"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.widgettypesdemo.PLAY_PAUSE" />
                <action android:name="com.example.widgettypesdemo.PREVIOUS" />
                <action android:name="com.example.widgettypesdemo.NEXT" />
                <action android:name="com.example.widgettypesdemo.OPEN_PLAYER" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/hybrid_widget_info" />
        </receiver>

        <!-- Collection Widget Service -->
        <service
            android:name=".services.CollectionWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS"
            android:exported="false" />

        <!-- Widget Update Service -->
        <service
            android:name=".services.WidgetUpdateService"
            android:exported="false" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>